# AUREON Environment Variables Example

# Database Configuration
AUREON_DATABASE_URL=postgresql://aureon:aureon_password@postgres:5432/aureon
AUREON_DATABASE_POOL_SIZE=20
AUREON_DATABASE_MAX_OVERFLOW=30
AUREON_DATABASE_POOL_TIMEOUT=30
AUREON_DATABASE_POOL_RECYCLE=3600

# Redis Configuration
AUREON_REDIS_URL=redis://redis:6379/0
AUREON_REDIS_MAX_CONNECTIONS=100
AUREON_REDIS_SOCKET_TIMEOUT=5
AUREON_REDIS_SOCKET_CONNECT_TIMEOUT=5
AUREON_REDIS_RETRY_ON_TIMEOUT=true

# API Configuration
AUREON_API_HOST=0.0.0.0
AUREON_API_PORT=8000
AUREON_API_WORKERS=4
AUREON_API_MAX_REQUESTS=1000
AUREON_API_MAX_REQUESTS_JITTER=100
AUREON_API_TIMEOUT=30
AUREON_API_KEEPALIVE=2

# Security Configuration
AUREON_SECRET_KEY=your-secret-key-change-in-production
AUREON_JWT_SECRET=your-jwt-secret-change-in-production
AUREON_JWT_ALGORITHM=HS256
AUREON_JWT_EXPIRATION=3600
AUREON_PASSWORD_MIN_LENGTH=8
AUREON_MAX_LOGIN_ATTEMPTS=5
AUREON_LOCKOUT_DURATION=300

# Monitoring Configuration
AUREON_PROMETHEUS_ENDPOINT=http://prometheus:9090
AUREON_GRAFANA_ENDPOINT=http://grafana:3000
AUREON_OTLP_ENDPOINT=http://jaeger:14268/api/traces
AUREON_METRICS_INTERVAL=30
AUREON_HEALTH_CHECK_INTERVAL=10
AUREON_LOGGING_LEVEL=INFO

# ML Configuration
AUREON_MODEL_CACHE_SIZE=100
AUREON_PREDICTION_CACHE_TTL=3600
AUREON_TRAINING_TIMEOUT=3600
AUREON_MAX_CONCURRENT_TRAINING=5
AUREON_MODEL_VALIDATION_ENABLED=true
AUREON_AUTO_SCALING_ENABLED=true

# AutoML Configuration
AUREON_AUTOML_MAX_TRIALS=100
AUREON_AUTOML_TIMEOUT_MINUTES=60
AUREON_AUTOML_CV_FOLDS=5
AUREON_AUTOML_SCORING=auto
AUREON_AUTOML_FEATURE_SELECTION=true
AUREON_AUTOML_HYPERPARAMETER_TUNING=true
AUREON_AUTOML_EARLY_STOPPING=true

# Feature Engineering Configuration
AUREON_FEATURE_SELECTION_METHOD=auto
AUREON_FEATURE_SELECTION_K=10
AUREON_SCALING_METHOD=auto
AUREON_POLYNOMIAL_FEATURES=false
AUREON_INTERACTION_FEATURES=false
AUREON_STATISTICAL_FEATURES=true
AUREON_OUTLIER_DETECTION=true

# Model Compression Configuration
AUREON_COMPRESSION_METHOD=auto
AUREON_PRUNING_RATIO=0.5
AUREON_QUANTIZATION_BITS=8
AUREON_DISTILLATION_TEMPERATURE=3.0
AUREON_COMPRESSION_RATIO_TARGET=0.5

# Federated Learning Configuration
AUREON_FL_NUM_CLIENTS=5
AUREON_FL_NUM_ROUNDS=10
AUREON_FL_LOCAL_EPOCHS=5
AUREON_FL_LEARNING_RATE=0.01
AUREON_FL_AGGREGATION_METHOD=fedavg
AUREON_FL_PRIVACY_PRESERVING=true
AUREON_FL_DIFFERENTIAL_PRIVACY=false

# Benchmarking Configuration
AUREON_BENCHMARK_DATASET_SIZE=10000
AUREON_BENCHMARK_NUM_ITERATIONS=10
AUREON_BENCHMARK_CONCURRENT_USERS=10
AUREON_BENCHMARK_DURATION_MINUTES=5
AUREON_BENCHMARK_RESOURCE_MONITORING=true

# Cache Configuration
AUREON_CACHE_DEFAULT_TTL=3600
AUREON_CACHE_MAX_SIZE=1000
AUREON_CACHE_EVICTION_POLICY=lru
AUREON_CACHE_COMPRESSION_ENABLED=true

# Logging Configuration
AUREON_LOG_LEVEL=INFO
AUREON_LOG_FORMAT=json
AUREON_LOG_FILE_PATH=logs/aureon.log
AUREON_LOG_MAX_FILE_SIZE=10MB
AUREON_LOG_BACKUP_COUNT=5
AUREON_LOG_ROTATION=daily

# Email Configuration
AUREON_EMAIL_SMTP_HOST=localhost
AUREON_EMAIL_SMTP_PORT=587
AUREON_EMAIL_SMTP_USERNAME=
AUREON_EMAIL_SMTP_PASSWORD=
AUREON_EMAIL_FROM_EMAIL=noreply@aureon.com
AUREON_EMAIL_USE_TLS=true

# Notification Configuration
AUREON_SLACK_WEBHOOK_URL=
AUREON_DISCORD_WEBHOOK_URL=
AUREON_TEAMS_WEBHOOK_URL=
AUREON_EMAIL_NOTIFICATIONS=false
AUREON_WEBHOOK_NOTIFICATIONS=false

# File Storage Configuration
AUREON_STORAGE_TYPE=local
AUREON_STORAGE_LOCAL_PATH=storage
AUREON_STORAGE_S3_BUCKET=
AUREON_STORAGE_S3_REGION=us-east-1
AUREON_STORAGE_S3_ACCESS_KEY=
AUREON_STORAGE_S3_SECRET_KEY=
AUREON_STORAGE_MAX_FILE_SIZE=100MB
AUREON_STORAGE_ALLOWED_EXTENSIONS=csv,json,parquet,pickle

# Rate Limiting Configuration
AUREON_RATE_LIMITING_ENABLED=true
AUREON_RATE_LIMITING_REQUESTS_PER_MINUTE=100
AUREON_RATE_LIMITING_REQUESTS_PER_HOUR=1000
AUREON_RATE_LIMITING_BURST_SIZE=20
AUREON_RATE_LIMITING_WINDOW_SIZE=60

# CORS Configuration
AUREON_CORS_ALLOWED_ORIGINS=*
AUREON_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
AUREON_CORS_ALLOWED_HEADERS=*
AUREON_CORS_ALLOW_CREDENTIALS=true
AUREON_CORS_MAX_AGE=3600
